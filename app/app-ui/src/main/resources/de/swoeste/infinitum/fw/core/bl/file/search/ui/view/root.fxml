<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.fxmisc.richtext.CodeArea?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.swoeste.infinitum.fw.core.bl.file.search.ui.view.ApplicationController">
    <center>
        <TabPane prefHeight="200.0" prefWidth="200.0" side="BOTTOM" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <tabs>
                <Tab text="Search File">
                    <content>
                        <AnchorPane prefHeight="500.0" prefWidth="600.0">
                            <children>
                                <VBox prefHeight="460.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="600.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label layoutX="10.0" layoutY="20.0" text="Path:" />
                                                <TextField fx:id="searchFileTextPath" layoutX="45.0" layoutY="15.0" prefHeight="25.0" prefWidth="470.0" />
                                                <Button layoutX="525.0" layoutY="15.0" mnemonicParsing="false" onAction="#searchFileBrowse" prefHeight="25.0" prefWidth="65.0" text="Browse ..." textAlignment="CENTER" />
                                                <Label layoutX="10.0" layoutY="60.0" text="File:" />
                                                <TextField fx:id="searchFileTextFile" layoutX="45.0" layoutY="55.0" prefHeight="25.0" prefWidth="470.0" />
                                                <CheckBox fx:id="searchFileCheckBoxIncludeSubDirectories" layoutX="10.0" layoutY="95.0" mnemonicParsing="false" text="include sub-directories" />
                                                <CheckBox fx:id="searchFileCheckBoxIncludeArchives" layoutX="170.0" layoutY="95.0" mnemonicParsing="false" text="include archives" />
                                                <Button layoutX="525.0" layoutY="90.0" mnemonicParsing="false" onAction="#searchFile" prefHeight="25.0" prefWidth="65.0" text="Search" textAlignment="CENTER" />
                                            </children>
                                        </Pane>
                                        <AnchorPane prefHeight="340.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <TableView fx:id="searchFileTable" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                    <columns>
                                                        <TableColumn fx:id="searchFileTableColumnFilePath" editable="false" minWidth="100.0" prefWidth="600.0" sortable="false" text="Path">
                                                            <cellValueFactory>
                                                                <PropertyValueFactory property="filePath" />
                                                            </cellValueFactory>
                                                        </TableColumn>
                                                    </columns>
                                                </TableView>
                                            </children>
                                        </AnchorPane>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <Tab text="Search Content">
                    <content>
                        <AnchorPane prefHeight="500.0" prefWidth="600.0">
                            <children>
                                <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                    <children>
                                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="170.0" prefWidth="600.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label layoutX="10.0" layoutY="20.0" text="Path:" />
                                                <TextField fx:id="searchContentTextPath" layoutX="65.0" layoutY="15.0" prefHeight="25.0" prefWidth="450.0" />
                                                <Button layoutX="525.0" layoutY="15.0" mnemonicParsing="false" onAction="#searchContentBrowse" prefHeight="25.0" prefWidth="65.0" text="Browse ..." />
                                                <Label layoutX="10.0" layoutY="60.0" text="File:" />
                                                <TextField fx:id="searchContentTextFile" layoutX="65.0" layoutY="55.0" prefHeight="25.0" prefWidth="450.0" />
                                                <Label layoutX="10.0" layoutY="100.0" text="Content:" />
                                                <TextField fx:id="searchContentTextContent" layoutX="65.0" layoutY="95.0" prefHeight="25.0" prefWidth="450.0" />
                                                <CheckBox fx:id="searchContentCheckBoxIncludeSubDirectories" layoutX="10.0" layoutY="140.0" mnemonicParsing="false" text="include sub-directories" />
                                                <CheckBox fx:id="searchContentCheckBoxIncludeArchives" layoutX="170.0" layoutY="140.0" mnemonicParsing="false" text="include archives" />
                                                <Button layoutX="525.0" layoutY="135.0" mnemonicParsing="false" onAction="#searchContent" prefHeight="25.0" prefWidth="65.0" text="Search" />
                                            </children>
                                        </Pane>
                                        <SplitPane dividerPositions="0.4" orientation="VERTICAL" prefHeight="300.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
                                            <items>
                                                <AnchorPane>
                                                    <children>
                                                        <TableView fx:id="searchContentTable" onMouseClicked="#searchContentTableOnMouseClicked" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                                            <columns>
                                                                <TableColumn fx:id="searchContentTableColumnFilePath" editable="false" minWidth="100.0" prefWidth="550.0" sortable="false" text="Path">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="filePath" />
                                                                    </cellValueFactory>
                                                                </TableColumn>
                                                                <TableColumn fx:id="searchContentTableColumnResultPositionsCount" editable="false" minWidth="50.0" prefWidth="50.0" sortable="false" text="Match">
                                                                    <cellValueFactory>
                                                                        <PropertyValueFactory property="resultPositionsCount" />
                                                                    </cellValueFactory>
                                                                </TableColumn>
                                                            </columns>
                                                        </TableView>
                                                    </children>
                                                </AnchorPane>
                                                <AnchorPane>
                                                    <children>
                                                          <CodeArea fx:id="searchContentSelectedFilePathContent" editable="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                                                    </children>
                                                </AnchorPane>
                                            </items>
                                        </SplitPane>
                                    </children>
                                </VBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
